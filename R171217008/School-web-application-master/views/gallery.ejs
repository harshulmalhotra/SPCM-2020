    <hr>
    <hr>

    <section class="newsletter">
      <div class="container">
        <div class="row">
          <div class="col-sm-6">
            <% if(update === 200){ %>
              <div class="alert alert-success">
                <a href="#" class="close" data-dismiss="alert">×</a>
                <p><strong>Thank you. </strong>You will now be receiving our newsletters via emails.</p> 
              </div>
            <% }else if(update === ""){ %>
              <div class="alert alert-warning">
                <a href="#" class="close" data-dismiss="alert">×</a>
                <p><strong>Please try again </strong>"The email has already been used oR Invalid.</p> 
              </div>
            <% }else{ %>
              <div class="alert alert-info">
                  <a href="#" class="close" data-dismiss="alert">×</a>
                  <p>Please provide your email below to subscribe to our newsletter.</p> 
                </div>
            <% } %>
            <h2>Subscribe to our Newsletter</h2>
            <form action="/gallery" method="POST">
              <div class="form-group">
                <input type="email" name="email" class="form-control" placeholder="Enter your email" required>
              </div> 
              <span class="input-group-btn">
                <button class="btn btn-primary btn-lg btn-block" type="submit">Subscribe</button>
              </span>
            </form>
          </div>
        </div>
      </div>
    </section>

